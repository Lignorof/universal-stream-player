<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:label="universal_stream_player"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">
        
        <!-- Main tags -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            
            <!-- Meta-data do tema-->
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />


            <!-- 1. INTENT-FILTER PARA INICIAR O APLICATIVO  -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- INTENT-FILTERS -->
 
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Callback para o Spotify -->
                <data android:scheme="usp" android:host="callback" />
            </intent-filter>
            
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Callback para o Deezer -->
                <data android:scheme="usp" android:host="deezer-callback" />
            </intent-filter>


        </activity>
        
        <!-- Meta-data do Flutter, deve ficar fora da activity, mas dentro da application -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- resto -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>

